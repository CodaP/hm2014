<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/TextView_PageOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Make a Monster!."
        android:textSize="30sp" />

    <EditText
        android:id="@+id/EditView_CRnumber"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView_CRdescription"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="number"
        android:text="1" >

        <requestFocus />
    </EditText>
    
    
    
    
    <LinearLayout
       	android:id="@+id/LinearLayout_slideDescriptor"
       	android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/TextView_CRdescription"
        android:layout_below="@+id/EditView_CRnumber" >
        
        <TextView
            android:id="@+id/textView_lowValues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low Values"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/TextView_blank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" " 
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/textView_hiValues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" 
            android:text="Hi Values" />
        
    </LinearLayout>

    
    
    
    
    
    
    <LinearLayout
        android:id="@+id/LinearLayout_HPLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/TextView_CRdescription"
        android:layout_below="@+id/LinearLayout_slideDescriptor" >

        <TextView
            android:id="@+id/textView_HPdescriptor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HP"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/seekBar_HPslider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView_CurrentHP"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="Cur"
            android:textSize="20sp" />
    </LinearLayout>
    
    
    
    
    
    
    
    
    <LinearLayout
        android:id="@+id/LinearLayout_ACLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/TextView_CRdescription"
        android:layout_below="@+id/LinearLayout_HPLayout">

        <TextView
            android:id="@+id/textView_ACdescriptor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AC"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/seekBar_ACslider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView_CurrentAC"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="Cur"
            android:textSize="20sp" />
    </LinearLayout>
    
    
    
    
    
    
    
    
    <LinearLayout
        android:id="@+id/LinearLayout_AttackLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/TextView_CRdescription"
        android:layout_below="@+id/LinearLayout_ACLayout">

        <TextView
            android:id="@+id/textView_Attackdescriptor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attack"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/seekBar_Attackslider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView_CurrentAttack"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="Cur"
            android:textSize="20sp" />
    </LinearLayout>  
    
    
    

    
    
    
    
    <LinearLayout
        android:id="@+id/LinearLayout_PrimaryDCLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/TextView_CRdescription"
        android:layout_below="@+id/LinearLayout_AttackLayout">

        <TextView
            android:id="@+id/textView_PrimaryDCdescriptor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PrimaryDC"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/seekBar_PrimaryDCslider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView_CurrentPrimaryDC"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="Cur"
            android:textSize="20sp" />
    </LinearLayout>  
    
    
    
    
    <LinearLayout
        android:id="@+id/LinearLayout_SecondaryDCLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/TextView_CRdescription"
        android:layout_below="@+id/LinearLayout_PrimaryDCLayout">

        <TextView
            android:id="@+id/textView_SecondaryDCdescriptor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SecondaryDC"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/seekBar_SecondaryDCslider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView_CurrentSecondaryDC"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="Cur"
            android:textSize="20sp" />
    </LinearLayout>  
    
    
    
    
    <LinearLayout
        android:id="@+id/LinearLayout_GoodSaveLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/TextView_CRdescription"
        android:layout_below="@+id/LinearLayout_SecondaryDCLayout">

        <TextView
            android:id="@+id/textView_GoodSavedescriptor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/EditView_CRnumber"
            android:layout_below="@+id/EditView_CRnumber"
            android:text="GoodSave"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/seekBar_GoodSaveslider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView_CurrentGoodDC"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="Cur"
            android:textSize="20sp" />
    </LinearLayout>    
    
    
    
    
    
    <LinearLayout
        android:id="@+id/LinearLayout_PoorSaveLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/TextView_CRdescription"
        android:layout_below="@+id/LinearLayout_GoodSaveLayout">

        <TextView
            android:id="@+id/textView_PoorSavedescriptor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/EditView_CRnumber"
            android:layout_below="@+id/EditView_CRnumber"
            android:text="PoorSave"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/seekBar_PoorSaveslider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView_CurrentPoorDC"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="Cur"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/TextView_CRdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TextView_PageOne"
        android:text="Select a CR for the monster 1-20"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView_CRdescription"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/LinearLayout_PoorSaveLayout"
        android:onClick="advancePage"
        android:text="Next Page" />

</RelativeLayout>